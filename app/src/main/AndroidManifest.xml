<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="bottlerocket.laurenyew.companylist">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <activity
            android:name=".SplashActivity"
            android:theme="@style/SplashTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".list.CompanyListActivity"
            android:label="@string/company_list_activity_label"
            android:theme="@style/AppTheme.NoActionBar">
        </activity>
        <activity
            android:name=".detail.CompanyDetailActivity"
            android:label="@string/company_detail_activity_label">
        </activity>
    </application>

    <uses-permission android:name="android.permission.INTERNET"/>

</manifest>